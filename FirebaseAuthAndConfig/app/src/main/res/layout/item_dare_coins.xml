<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cvDareCoins"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:elevation="16dp"
        card_view:cardCornerRadius="4dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/tvCoinsPrice"
                android:layout_width="105dp"
                android:layout_height="22dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="96dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="8dp"
                android:text="[Price]"
                android:textColor="@color/colorAccent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/tvAmount"
                card_view:layout_constraintVertical_bias="0.714" />

            <ImageView
                android:id="@+id/ivDareCoinsImage"
                android:layout_width="93dp"
                android:layout_height="90dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/goldcoins"
                app:srcCompat="@mipmap/ic_launcher_round"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                 />

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="100dp"
                android:layout_height="26dp"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="160dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Amount"
                android:textColor="@color/colorAccent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toStartOf="@+id/btnBuyCoins"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/ivDareCoinsImage"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.108" />

            <Button
                android:id="@+id/btnBuyCoins"
                android:layout_width="69dp"
                android:layout_height="45dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:text="Buy"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>